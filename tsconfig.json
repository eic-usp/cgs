{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES6",
        "moduleResolution": "node16",
        "allowSyntheticDefaultImports": true,
        "outDir": "dist",
        "typeRoots": ["src/@types"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}  
